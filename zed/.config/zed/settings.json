// Zed Settings
{
	// Editor
	"context_servers": {
		"figma": {
			"command": {
				"path": "/Users/tihav/.local/share/uv/tools/mcp-proxy/bin/mcp-proxy",
				"args": ["http://127.0.0.1:3845/sse"]
			}
		}
	},
	"agent": {
		"always_allow_tool_actions": true,
		"default_model": {
			"provider": "google",
			"model": "gemini-2.5-pro-preview-03-25"
		},
		"version": "2"
	},
	"features": {
		"edit_prediction_provider": "zed"
	},
	"theme": {
		"mode": "system",
		"light": "Github Light",
		"dark": "Github Dark Dimmed"
	},
	"icon_theme": "Catppuccin Latte",
	"on_last_window_closed": "quit_app",
	"vim_mode": true,
	"vim": {
		"use_system_clipboard": "always",
		"use_smartcase_find": true,
		"use_multiline_find": true
	},
	"seed_search_query_from_cursor": "selection",
	"hover_popover_enabled": false,
	"cursor_blink": false,
	"scroll_beyond_last_line": "vertical_scroll_margin",
	"vertical_scroll_margin": 5,
	"relative_line_numbers": true,
	"show_completions_on_input": false,
	"show_whitespaces": "selection",
	"use_autoclose": true,
	"use_auto_surround": true,
	"inlay_hints": {
		"enabled": true,
		"show_parameter_hints": true,
		"show_type_hints": false
	},
	"tab_size": 2,
	"hard_tabs": false,
	"format_on_save": "on",
	// Git
	"git": {
		"inline_blame": {
			"enabled": true
		}
	},
	// Terminal
	"terminal": {
		"line_height": "standard",
		"shell": {
			"program": "/Users/tihav/configs/bin/bin/ta_cwd"
		}
	},
	// Fonts
	"ui_font_size": 16,
	"ui_font_features": {
		"calt": true,
		"liga": true
	},
	"buffer_font_size": 15.0,
	"ui_font_family": "Geist Mono",
	"buffer_font_family": "Geist Mono",
	"buffer_font_features": {
		"calt": true,
		"liga": false
	},
	// UI
	"tab_bar": {
		"show": true
	},
	"tabs": {
		"file_icons": true,
		"git_status": true,
		"activate_on_close": "history"
	},
	"gutter": {
		"code_actions": false,
		"runnables": false
	},
	// Language Servers and Formatting
	"formatter": [
		{
			"language_server": {
				"name": "astro"
			}
		},
		// "prettier",
		{
			"language_server": {
				"name": "biome"
			}
		},
		{
			"code_actions": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		}
	],
	"languages": {
		"TypeScript": {
			// "language_servers": ["...", "tailwindcss-language-server"]
		},
		"Shell Script": {
			"formatter": "prettier"
		},
		"HTML": {
			"formatter": "prettier"
		},
		"YAML": {
			"formatter": "prettier"
		},
		"Markdown": {
			"formatter": "prettier",
			"format_on_save": "off"
		},
		"MDX": {
			"formatter": "prettier",
			"format_on_save": "on",
			"language_servers": ["...", "tailwindcss-language-server"]
		},
		"JavaScript": {
			"formatter": "prettier"
		}
	},
	"file_types": {
		"HTML": ["*.svg", "*.hbs"]
	},
	"lsp": {
		"deno": {
			"settings": {
				"deno": {
					"enable": true
				}
			}
		},
		"biome": {
			"settings": {
				// "require_config_file": true
			}
		}
	}
}
