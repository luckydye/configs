// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "vim_mode": true,
  "base_keymap": "VSCode",
  "theme": "Andromeda",
  "buffer_font_size": 13,
  "buffer_font_family": "CommitMono",
  "show_whitespaces": "selection",
  "formatter": "language_server",
  "format_on_save": "on",
  "language_overrides": {
    "TSX": {
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": [
            "x",
            "@biomejs/biome",
            "format",
            "--stdin-file-path",
            "{buffer_path}"
          ]
        }
      }
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": [
            "x",
            "@biomejs/biome",
            "format",
            "--stdin-file-path",
            "{buffer_path}"
          ]
        }
      }
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": [
            "x",
            "@biomejs/biome",
            "format",
            "--stdin-file-path",
            "{buffer_path}"
          ]
        }
      }
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": [
            "@biomejs/biome",
            "format",
            "--stdin-file-path",
            "{buffer_path}"
          ]
        }
      }
    }
  }
}
