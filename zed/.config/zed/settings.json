// Zed Settings
{
  "agent_servers": {
    "AMP": {
      "command": "amp",
      "args": ["--acp"],
      "env": {}
    }
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    },
    "expand_edit_card": false,
    "expand_terminal_card": true
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "theme": {
    "mode": "system",
    "light": "Panda Light",
    "dark": "Panda"
  },
  "icon_theme": "VSCode Icons (Dark)",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },
  "use_autoclose": false,
  "jsx_tag_auto_close": {
    "enabled": true
  },
  "seed_search_query_from_cursor": "selection",
  "hover_popover_enabled": false,
  "cursor_blink": false,
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "vertical_scroll_margin": 5,
  "relative_line_numbers": "enabled",
  "show_completions_on_input": false,
  "show_whitespaces": "selection",
  "unstable.ui_density": "compact",
  "inlay_hints": {
    "enabled": true,
    "show_parameter_hints": true,
    "show_type_hints": false
  },
  // Git
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  // Terminal
  "terminal": {
    "line_height": "standard",
    "shell": {
      "program": "/Users/tihav/configs/bin/bin/ta_cwd"
    }
  },
  // Fonts
  "ui_font_size": 16,
  "buffer_font_size": 15.0,
  "ui_font_family": "Geist Mono",
  "buffer_font_family": ".ZedMono",
  "buffer_font_features": {
    "calt": true,
    "liga": false
  },
  // UI
  "tab_bar": {
    "show": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history"
  },
  "gutter": {
    "runnables": false,
    "breakpoints": false,
    "folds": true
  },
  "format_on_save": "off",
  // Language Servers and Formatting
  // "formatter": "prettier",
  "formatter": [
    {
      "language_server": {
        "name": "biome"
      }
    },
    { "code_action": "source.fixAll.biome" }
  ],
  "languages": {
    "Shell Script": {
      "formatter": "prettier"
    },
    "HTML": {
      "formatter": "prettier"
    },
    "YAML": {
      "formatter": "prettier"
    },
    "CSS": {
      "formatter": "prettier"
    },
    "Markdown": {
      "formatter": "prettier"
    },
    "MDX": {
      "formatter": "prettier",
      "language_servers": ["...", "tailwindcss-language-server"]
    },
    "JavaScript": {
      "formatter": "prettier"
    }
  },
  "file_types": {
    "HTML": ["*.svg", "*.hbs"],
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ]
  },
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true
        }
      }
    },
    "biome": {
      "settings": {
        // "require_config_file": true
      }
    }
  }
}
