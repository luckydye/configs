// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true
  },

  "theme": "Github Dark",
  "assistant": {
    "dock": "bottom"
  },

  "show_completions_on_input": false,
  "relative_line_numbers": true,
  "show_whitespaces": "selection",
  "use_autoclose": false,
  "format_on_save": "off",

  "ui_font_family": "Helvetica",
  "ui_font_size": 16,
  "ui_font_features": {
    "calt": true,
    "liga": true
  },

  "buffer_font_size": 13,
  "buffer_font_family": "CommitMono",
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },

  "language_overrides": {
    "TypeScript": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "./node_modules/@biomejs/cli-darwin-arm64/biome",
          "arguments": [
            "check",
            "--apply-unsafe",
            "--stdin-file-path",
            "{buffer_path}"
          ]
        }
      }
    },
    "TSX": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "./node_modules/@biomejs/cli-darwin-arm64/biome",
          "arguments": [
            "check",
            "--apply-unsafe",
            "--stdin-file-path",
            "{buffer_path}"
          ]
        }
      }
    },
    "JavaScript": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "./node_modules/@biomejs/cli-darwin-arm64/biome",
          "arguments": [
            "check",
            "--apply-unsafe",
            "--stdin-file-path",
            "{buffer_path}"
          ]
        }
      }
    },
    "JSON": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "./node_modules/@biomejs/cli-darwin-arm64/biome",
          "arguments": [
            "check",
            "--apply-unsafe",
            "--stdin-file-path",
            "{buffer_path}"
          ]
        }
      }
    }
  }
}
