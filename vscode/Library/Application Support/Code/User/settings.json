{
  "editor.minimap.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.codeActionWidget.includeNearbyQuickFixes": true,
  "editor.inlayHints.enabled": "off",
  "editor.find.cursorMoveOnType": false,
  "editor.accessibilitySupport": "off",
  "editor.stickyScroll.enabled": true,
  "editor.find.seedSearchStringFromSelection": "selection",
  "editor.fontSize": 13,
  "editor.fontFamily": "CommitMono",
  "terminal.integrated.fontFamily": "CommitMono",
  "editor.fontLigatures": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.wordBasedSuggestions": "off",
  "editor.autoClosingComments": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingOvertype": "never",
  "editor.suggest.preview": true,
  "editor.colorDecorators": true,
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.fileNesting.enabled": false,
  "workbench.editor.showTabs": "none",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "top",
  "workbench.editor.splitSizing": "split",
  "workbench.colorTheme": "GitHub Dark",

  "files.associations": {
    "*.twig": "twig",
    "*.mustache": "twig",
    "*.mdx": "mdx",
    ".env": "ini",
    "TODO": "markdown",
    "nginx": "plaintext"
  },
  "files.autoSaveDelay": 500,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "git.showCommitInput": false,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "github.branchProtection": true,
  "github.gitProtocol": "ssh",
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },

  "javascript.preferences.importModuleSpecifierEnding": "js",
  "[typescriptreact]": {
    "tailwindCSS.suggestions": true,
    "editor.defaultFormatter": "biomejs.biome"
  },
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.preferences.importModuleSpecifierEnding": "js",

  "cSpell.enabled": true,
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.files": ["**/*.md", "**/*.ts", "**/*.tsx", "**/*.json"],

  "sqlite3-editor.ui.tableSelector.displayColumns": true,

  "javascript.preferences.autoImportFileExcludePatterns": [
    "~*",
    "@*",
    "#*"
  ],
  "typescript.preferences.autoImportFileExcludePatterns": [
    "~*",
    "@*",
    "#*"
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative"
}
