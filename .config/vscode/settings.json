{
  "workbench.editor.splitInGroupLayout": "vertical",
  // "editor.suggestSelection": "recentlyUsed",
  "editor.minimap.enabled": false,
  // "editor.inlineSuggest.enabled": true,
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "off",
  "editor.codeActionsOnSave": {
    "source.organizeImports": false
  },
  "editor.accessibilitySupport": "off",
  "editor.stickyScroll.enabled": true,
  "editor.find.seedSearchStringFromSelection": "selection",
  "editor.fontSize": 13,
  "editor.formatOnSaveMode": "modifications",
  "editor.acceptSuggestionOnCommitCharacter": false,
  // "editor.quickSuggestionsDelay": 8,
  // "editor.snippetSuggestions": "top",
  // "editor.suggest.insertMode": "replace",
  // "editor.suggest.localityBonus": true,
  "editor.suggest.preview": true,
  "editor.colorDecorators": true,
  "editor.tabSize": 2,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.fileNesting.enabled": false,
  "workbench.colorTheme": "Panda Syntax",
  "workbench.startupEditor": "readme",
  "workbench.editor.showTabs": false,
  "workbench.settings.editor": "json",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "files.associations": {
    "*.twig": "html",
    "*.mustache": "html",
    "*.mdx": "mdx",
    ".env": "ini",
    "TODO": "markdown"
  },
  "git.showCommitInput": false,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git-graph.graph.style": "angular",
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "[typescriptreact]": {
    "tailwindCSS.suggestions": true
  },
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "projectManager.git.baseFolders": ["/Users/tihav/source/luckydye", "/Users/tihav/source/sv"],
  "projectManager.sortList": "Recent",
  "projectManager.ignoreProjectsWithinProjects": true,
  "projectManager.removeCurrentProjectFromList": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "prettier.printWidth": 100,
  "files.autoSaveDelay": 500,
  "terminal.integrated.gpuAcceleration": "on",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "cSpell.userWords": ["astro", "astrojs", "dropzone", "fastify"],
  "typescript.updateImportsOnFileMove.enabled": "never",
  "cSpell.files": ["*.md", "*.ts", "*.tsx"],
  "files.exclude": {
    "**/.DS_Store": false,
    "**/.git": false
  },
  "terminal.external.linuxExec": "tabby",
  "window.titleBarStyle": "custom",
  "terminal.integrated.env.windows": {},
  "terminal.integrated.env.linux": {},
  "livePreview.serverRoot": "dist",
  "vim.cursorStylePerMode.normal": "block-outline",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  }
}
