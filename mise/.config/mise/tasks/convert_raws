#!/bin/bash
# mise hide=true

find . -type f -name "*.CR3" -exec sh -c 'file={}; dir=$(dirname $file); name=$(basename $file .CR3); test -f $dir/$name.jpg || (dnglab analyze --srgb $file | ffmpeg -f image2pipe -vcodec ppm -i - -f image2 -q:v 6 $dir/$name.jpg && exiftool -TagsFromFile $file "-all:all>all:all" $dir/$name.jpg && cp --attributes-only --preserve $file $dir/$name.jpg) && rm $dir/$name.jpg_original' \;
